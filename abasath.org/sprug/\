                                                        document.write("</td>");

                                                        document.write("<td>");

                                                                document.write(sunrise);

                                                        document.write("</td>");

                                                        document.write("<td>");

                                                                document.write(sunset);

                                                        document.write("</td>");
							
							document.write("</tr>");

