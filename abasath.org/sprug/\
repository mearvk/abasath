                                                                document.write(weather);

                                                        document.write("</td>");

                                                        document.write("<td>");

                                                                document.write(detail);

                                                        document.write("</td>");

                                                        document.write("<td>");

                                                                document.write(barometer);

                                                        document.write("</td>");

                                                        document.write("<td>");

                                                                document.write(wind_degree);

                                                        document.write("</td>");

                                                        document.write("<td>");

